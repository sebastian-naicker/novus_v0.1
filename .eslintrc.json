{
	"root": true,
	"extends": [
		"essentials",
		"react"
	],
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},
	"rules": {
		"no-console": 1,
		"indent": ["error", "tab"],
		"comma-dangle": 0
	}
}
